<div>Current Player: {{currentPlayer}}</div>

<div class="GameBoardContainer">
  <div class="GameBoard">
    {{#each board key="@index" as |column colIdx|}}
      <div class="GameColumn">
        {{#each column key="@index" as |cell|}}
          <GameCell
            @color={{cell.color}}
            @colIdx={{colIdx}}
            @onClick={{action "onClick"}}
          />
        {{/each}}
      </div>
    {{/each}}
  </div>
</div>